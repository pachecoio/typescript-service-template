{
  "verbose": true,
  "testEnvironment": "node",
  "testMatch": ["**/__tests__/**/*.ts?(x)", "**/?(*.)+(spec|test).ts?(x)"],
  "collectCoverageFrom": ["src/**/*.{ts,tsx}", "!src/**/*.d.ts"],
  "coverageDirectory": "coverage",
  "coverageReporters": ["json", "lcov", "text", "clover"],
  "clearMocks": true,
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  }
}
